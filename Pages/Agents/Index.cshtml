@page
@model GestCirculation.Pages_Agents.IndexModel

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/Indexconduc.css?v=1.0" />

<div class="container fade-in">
    <h1 class="text-center my-4 text-primary fw-bold title-animate">Liste des Agents</h1>

    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
        <a class="btn btn-success mb-2" asp-page="Create">
            <i class="fas fa-plus"></i> Ajouter Nouveau
        </a>

        <div class="d-flex gap-2 mb-2">
            <button id="exportExcel" class="btn btn-primary">
                <i class="fas fa-file-excel"></i> Exporter Excel
            </button>
            <button id="exportPDF" class="btn btn-danger">
                <i class="fas fa-file-pdf"></i> Exporter PDF
            </button>
        </div>
    </div>

<div class="table-responsive">
    <table id="agentTable" class="table custom-table shadow-sm">
        <thead class="table-dark">
            <tr>
                <th><i class="fas fa-id-card me-1 text-primary"></i> @Html.DisplayNameFor(model => model.Agent[0].Id)</th>
                <th><i class="fas fa-user-shield me-1 text-success"></i> @Html.DisplayNameFor(model => model.Agent[0].Code_agent)</th>
                <th><i class="fas fa-building me-1 text-info"></i> @Html.DisplayNameFor(model => model.Agent[0].Affectation)</th>
                <th><i class="fas fa-user me-1 text-warning"></i> @Html.DisplayNameFor(model => model.Agent[0].Nom)</th>
                <th><i class="fas fa-user-tag me-1 text-danger"></i> @Html.DisplayNameFor(model => model.Agent[0].Prenom)</th>
                <th><i class="fas fa-cogs me-1 text-secondary"></i> Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Agent)
            {
                <tr class="table-row">
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Code_agent)</td>
                    <td>@Html.DisplayFor(modelItem => item.Affectation)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nom)</td>
                    <td>@Html.DisplayFor(modelItem => item.Prenom)</td>
                    <td>
                        <a class="btn btn-info btn-sm me-1" asp-page="./Edit" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                        <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@item.Id">
                            <i class="fas fa-trash-alt"></i> Supprimer
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

    <div class="text-center mt-5">
        <img src="~/image/logopolice.png" alt="Logo PNH" class="logo-pnh" />
    </div>
</div>

<script>
    document.getElementById('exportExcel').addEventListener('click', () => {
    let table = document.getElementById('agentTable'); // ID de ta table
    let wb = XLSX.utils.table_to_book(table, {sheet:"Agents"});
    XLSX.writeFile(wb, "Agents.xlsx");
});

 document.getElementById('exportPDF').addEventListener('click', () => {
    const { jsPDF } = window.jspdf;
    var doc = new jsPDF();

    doc.autoTable({ 
        html: '#agentTable', 
        theme: 'grid',
        headStyles: { fillColor: [41, 128, 185] },
        alternateRowStyles: { fillColor: [220, 230, 241] }
    });
    doc.save('Agents.pdf');
});
</script>