@page
@model GestCirculation.Areas.Identity.Pages.Account.LoginModel

@{
    ViewData["Title"] = "";
}
<link rel="stylesheet" href="~/css/loginAccount.css" />
<h1 class="text-center mb-4 text-primary fw-bold">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <section class="login-container p-4 rounded shadow">
            <form id="login" method="post">
                <h2 class="mb-3 text-center text-dark fw-semibold">Connectez-vous à votre compte</h2>
                <hr class="mb-4" />

                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="Mot de passe" />
                    <label asp-for="Input.Password" class="form-label">Mot de passe</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-4">
                    <input asp-for="Input.RememberMe" class="form-check-input" />
                    <label asp-for="Input.RememberMe" class="form-check-label">Se souvenir de moi</label>
                </div>

                <button type="submit" class="w-100 btn-login-submit">Se connecter</button>
            </form>
        </section>
        <!-- Logo animé PNH -->
        <div class="text-center mt-5">
            <img src="~/image/logoPolice.png" alt="Logo PNH" class="logo-pnh-anim img-fluid">
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}